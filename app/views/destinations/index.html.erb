<% if notice != nil %>
<p class="alert alert-success" id="notice" role="alert"><%= notice %></p>
<% end %>



<%= javascript_tag do %>
    
  sites= <%=raw @latlongarray %>; 
    
<%end%>


 <div id="map-canvas"></div>




<h1>Listing destinations</h1>

<div class="row">  

    <% @destinations.each do |destination| %>
    <div class="col-md-4">
      <div class = "panel panel-default">
        <div class="panel-body">
           
           
            <h1><%= destination.address %></h1>
            <h6>Lat: <%= destination.latitude %>, Long: <%= destination.longitude %></h6>
            
            <p><%= destination.description %></p>
            
            <div class="btn-group">
              <%= link_to 'Show', destination, class: "btn btn-default" %>
              <%= link_to 'Edit', edit_destination_path(destination),  class: "btn btn-default" %>
              <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-default" %>
            </div>
        </div>
      </div>
        
    </div>
      
    <% end %>
</div>
  

<br>

<%= link_to 'New Destination', new_destination_path, class: "btn btn-primary" %>
